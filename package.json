{
  "name": "hashport-authentication-service",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:dev": "npx ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "NODE_ENV=production node dist/src/index.js",
    "deploy": "npm run prisma:generate && npm run prisma:migrate:deploy && npm run prisma:seed && npm run build && npm run start",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "db:setup:dev": "npm run prisma:generate && npm run prisma:migrate:dev && npm run prisma:seed",
    "db:setup:deploy": "npm run prisma:generate && npm run prisma:migrate:deploy && npm run prisma:seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "jose": "^6.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}